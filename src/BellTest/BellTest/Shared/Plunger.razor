<svg width="@Size" height="@Size" viewBox="-50 -50 100 100" @onmousedown="PlungerPressed" @onmouseup="PlungerReleased" @onmouseover="MouseEntered" @onmouseout="MouseLeft">
    <circle cx="0" cy="0" r="50" fill="black" />
    <circle cx="0" cy="0" r="45" fill="#fffa44" />
    <ellipse cx="0" cy="30" rx="15" ry="7" transform="rotate(210)" fill="#fffa9d" />
</svg>

@code {
    [Parameter]
    public int Size { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnPush { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnRelease { get; set; }

    private bool _state;

    private void PlungerPressed(MouseEventArgs e)
    {
        _state = true;
        OnPush.InvokeAsync(e);
    }

    private void PlungerReleased(MouseEventArgs e)
    {
        _state = false;
        OnRelease.InvokeAsync(e);
    }

    private void MouseEntered(MouseEventArgs e)
    {
        if ((e.Buttons & 1) != 0  && !_state)
        {
            _state = true;
            OnPush.InvokeAsync(e);
        }
    }

    private void MouseLeft(MouseEventArgs e)
    {
        if (_state)
        {
            _state = false;
            OnRelease.InvokeAsync(e);
        }
    }
}
