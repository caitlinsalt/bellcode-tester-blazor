<svg width="@Size" height="@Size" viewBox="-50 -50 100 100" @onpointerdown="PlungerPressed" @onpointerup="PlungerReleased">
    <circle cx="0" cy="0" r="50" fill="black" />
    <circle cx="0" cy="0" r="45" fill="#fffa44" />
    <ellipse cx="0" cy="30" rx="15" ry="7" transform="rotate(210)" fill="#fffa9d" />
</svg>

@code {
    [Parameter]
    public int Size { get; set; }

    [Parameter]
    public EventCallback<PointerEventArgs> OnPush { get; set; }

    [Parameter]
    public EventCallback<PointerEventArgs> OnRelease { get; set; }

    private bool state;

    private void PlungerPressed(PointerEventArgs e)
    {
        state = true;
        OnPush.InvokeAsync(e);
    }

    private void PlungerReleased(PointerEventArgs e)
    {
        state = false;
        OnRelease.InvokeAsync(e);
    }
}
